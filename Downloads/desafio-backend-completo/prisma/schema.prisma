// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // A variável de ambiente DATABASE_URL está definida no docker-compose.yml
  url      = env("DATABASE_URL") 
}

// O Model Product atende aos requisitos do desafio
model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

